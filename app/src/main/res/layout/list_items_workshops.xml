<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<ProgressBar
    android:id="@+id/progressBar"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:layout_gravity="center"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/workshopImage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="fitXY"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/Padding_30"
    android:orientation="vertical">


        <TextView
            android:id="@+id/workshopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cav"
            android:textColor="@color/material_red"
            android:textSize="18sp"
            android:text="ICSS Cyber Security Workshop"/>


            <TextView
                android:id="@+id/registrationFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/cav"
                android:textColor="@color/colorPrimary"
                android:text="Registration Fee: Rs 200"/>

            <TextView
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cav"
                android:textColor="@color/colorPrimary"
                android:text="Start Date: 13/02/20"/>


            <TextView
                android:id="@+id/endDate"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cav"
                android:textColor="@color/colorPrimary"
                android:text="End Date: 13/02/20"/>

            <TextView
                android:id="@+id/days"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cav"
                android:textColor="@color/colorPrimary"
                android:text="Days: 1"/>

            <TextView
                android:id="@+id/venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cav"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:text="Venue: Conference Room"/>

            <Button
                android:id="@+id/register"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/Padding_20"
                android:text="Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/oval_btn"/>


</LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>






</LinearLayout>
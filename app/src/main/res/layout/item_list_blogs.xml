<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/padding_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:foreground="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/memberImage"
            android:layout_width="64dp"
            android:src="@drawable/ic_blog_avatar"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginStart="2dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/item_name"
                    android:fontFamily="@font/cav"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Satyajit Pradhan"/>
        <TextView
            android:id="@+id/item_cllg"
            android:layout_width="wrap_content"
            android:fontFamily="@font/cav"
            android:layout_height="match_parent"
            android:text="Lovely Professional University"/>


            </LinearLayout>

        </LinearLayout>


<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginStart="@dimen/padding_10"
    android:layout_marginEnd="@dimen/padding_10"
    android:background="#ddd"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_image"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"/>

        <ProgressBar
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="@dimen/padding_10"
                android:layout_marginEnd="@dimen/padding_10"
                android:background="#ddd"/>


        <TextView
            android:paddingTop="@dimen/padding_10"
            android:id="@+id/item_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cav"
            android:paddingStart="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            android:textColor="@color/colorPrimary"
            android:text="Testing Message"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
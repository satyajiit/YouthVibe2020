<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    android:id="@+id/lay"
    android:layout_marginTop="-10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:fillViewport="true"
    android:layout_below="@id/EventImg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:elevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="110dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="118dp"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/teamSizeTV"
                    android:gravity="center"
                    android:fontFamily="@font/cav"
                    android:text="3-12 "
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"/>

                <TextView
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/cav"
                    android:text="TEAM SIZE"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                android:background="#25000000"
                android:layout_gravity="center"
                android:layout_width="0.6dp"
                android:visibility="gone"
                android:layout_height="65dp"/>

            <View
                android:background="#25000000"
                android:layout_gravity="center"
                android:layout_width="0.6dp"
                android:layout_height="65dp"/>


            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="118dp"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/firstPrizeTV"
                    android:gravity="center"
                    android:fontFamily="@font/cav"
                    android:text="₹10k"
                    android:textSize="20sp"
                    android:textColor="@color/material_red"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/cav"
                    android:text="1ST PRIZE"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                android:background="#25000000"
                android:layout_gravity="center"
                android:layout_width="0.6dp"
                android:layout_height="65dp"/>


            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="118dp"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/secondPrizeTV"
                    android:gravity="center"
                    android:fontFamily="@font/cav"
                    android:text="₹5000"
                    android:textSize="20sp"
                    android:textColor="@color/primaryTextColor"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/cav"
                    android:text="2ND PRIZE"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>




            <View
                android:background="#25000000"
                android:layout_gravity="center"
                android:layout_width="0.6dp"
                android:layout_height="65dp"/>


            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="118dp"
                android:layout_height="match_parent">



                <TextView

                    android:id="@+id/roundsTV"
                    android:gravity="center"
                    android:fontFamily="@font/cav"
                    android:text="2"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/cav"
                    android:text="ROUNDS"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>




            <View
                android:background="#25000000"
                android:layout_gravity="center"
                android:layout_width="0.6dp"
                android:layout_height="65dp"/>


            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="118dp"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/typeTV"
                    android:gravity="center"
                    android:fontFamily="@font/cav"
                    android:text="GROUP"
                    android:textSize="20sp"
                    android:textColor="#43A047"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/cav"
                    android:text="TYPE"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                android:background="#25000000"
                android:layout_gravity="center"
                android:layout_width="0.6dp"
                android:layout_height="65dp"/>


            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="118dp"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/eventDataTV"
                    android:gravity="center"
                    android:fontFamily="@font/cav"
                    android:text="16th FEB"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/cav"
                    android:text="DATE"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <View
                android:background="#25000000"
                android:layout_gravity="center"
                android:layout_width="0.6dp"
                android:layout_height="65dp"/>


            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="118dp"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/timeTV"
                    android:gravity="center"
                    android:fontFamily="@font/cav"
                    android:text="8:00 AM"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/cav"
                    android:text="TIME"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>





</HorizontalScrollView>

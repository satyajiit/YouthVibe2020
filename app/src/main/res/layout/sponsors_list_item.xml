<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/Padding_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/Padding_40"
                android:layout_marginEnd="@dimen/Padding_40"
                android:layout_height="320dp"
                app:cardCornerRadius="@dimen/Padding_10"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_gravity="center"
                    android:elevation="@dimen/Padding_40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/cardClicker"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/sponsorImage"
                        android:padding="@dimen/Padding_10"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="#ddd"/>




                   <RelativeLayout
                       android:id="@+id/clicker"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:clickable="true"
                       android:focusable="true"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:padding="@dimen/Padding_20"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/sponsorName"
                            android:text="Coca Cola India"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/cav"
                            android:textSize="15sp"
                            android:layout_alignParentStart="true"
                            android:paddingStart="@dimen/Padding_10"
                            android:paddingEnd="@dimen/Padding_10"
                            android:layout_marginEnd="25dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_marginStart="3dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow"/>

                       <TextView
                           android:id="@+id/sponsorType"
                           android:text="Drinks Partner"
                           android:layout_below="@id/sponsorName"
                           android:layout_centerHorizontal="true"
                           android:fontFamily="@font/cav"
                           android:textSize="14sp"
                           android:layout_alignParentStart="true"
                           android:paddingStart="@dimen/Padding_10"
                           android:paddingEnd="@dimen/Padding_10"
                           android:layout_marginEnd="25dp"
                           android:textColor="@color/material_red"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>

                   </RelativeLayout>

                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>


